<%= render layout: '/header',
           locals: { header: 'h2', title: 'Cycle Count' } do %>
  <nav class="pull-right">
    <%= link_to 'Add Pallet',
                new_cycle_count_pallet_path(cycle_count),
                class: 'btn btn-link' %>
    <%= link_to 'Edit',
                edit_cycle_count_path(cycle_count),
                class: 'btn btn-link' %>
    <%= link_to 'Return to Cycle Counts',
                cycle_counts_path,
                class: 'btn btn-link' %>
  </nav>
<% end %>
<div class="form form-horizontal">
  <div class="form-group">
    <label class="col-sm-3 control-label">Location Description</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.location.description %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Requested Date</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.formatted_requested_date %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Created By</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.created_by.email %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Created At</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.formatted_created_at %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Updated By</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.updated_by.email %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Updated At</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.formatted_updated_at %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Pallet Count</label>
    <p class="col-sm-6 form-control-static">
      <%= cycle_count.pallets.count %>
    </p>
  </div>
</div>
<br />
<% unless cycle_count.pallets.count == 0 %>
  <table class="table table-striped table-bordered">
    <thead>
      <th>Pallet Number</th>
      <th>Notes</th>
      <th>Current State</th>
      <th>Grossman Location</th>
      <th>Result</th>
      <th></th>
    </thead>
    <tbody>
      <%= render partial: "pallet", collection: cycle_count.pallets %>
    </tbody>
  </table>
<% end %>
