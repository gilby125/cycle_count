<%= render layout: '/header',
           locals: { header: 'h2', title: t('.title') } do %>
  <nav class="pull-right">
    <%= link_to 'Return to Cycle Count',
                cycle_count_path(params[:cycle_count_id]),
                class: 'btn btn-link' %>
  </nav>
<% end %>

<%= simple_form_for resource,
                    method: :patch,
                    url: cycle_count_pallet_path(resource.cycle_count_id,
                                                 resource.id) do |f| %>
  <div class="form-inputs">
    <%= error_messages resource %>

    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.save'), class: 'btn btn-primary' %>
  </div>
<% end %>
