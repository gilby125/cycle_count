<%= render layout: '/header',
           locals: { header: 'h2', title: 'Location' } do %>
  <nav class="pull-right">
    <%= link_to 'Return to Locations', locations_path, class: 'btn btn-link' %>
    <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-link' %>
  </nav>
<% end %>
<div class="form form-horizontal">
  <div class="form-group">
    <label class="col-sm-3 control-label">Location Number</label>
    <p class="col-sm-6 form-control-static"><%= location.location_number %></p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Area Number</label>
    <p class="col-sm-6 form-control-static"><%= location.area_number %></p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Sequence Number</label>
    <p class="col-sm-6 form-control-static"><%= location.sequence_number %></p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Description</label>
    <p class="col-sm-6 form-control-static"><%= location.description %></p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Created By</label>
    <p class="col-sm-6 form-control-static">
      <%= location.created_by.email %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Created At</label>
    <p class="col-sm-6 form-control-static">
      <%= location.formatted_created_at %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Updated By</label>
    <p class="col-sm-6 form-control-static">
      <%= location.updated_by.email %>
    </p>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Updated At</label>
    <p class="col-sm-6 form-control-static">
      <%= location.formatted_updated_at %>
    </p>
  </div>
</div>
