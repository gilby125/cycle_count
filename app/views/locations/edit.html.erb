<%= render layout: '/header',
           locals: { header: 'h2', title: t('.title') } do %>
  <nav class="pull-right">
    <%= link_to 'Return to Location',
                locations_path,
                class: 'btn btn-link' %>
  </nav>
<% end %>

<%= simple_form_for(location, method: :patch, url: location_path(location)) do |f| %>
  <%= render partial: 'form', locals: { f: f, model: location } %>
  <div class="form-actions">
    <%= f.button :submit, t('.save'), class: 'btn btn-primary' %>
  </div>
<% end %>
